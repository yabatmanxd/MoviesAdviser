<Page x:Class="MoviesAdviser.Pages.filmInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MoviesAdviser.Pages"
      mc:Ignorable="d" 
      Title="filmInfo">

    <Grid>
        <StackPanel Margin="20" HorizontalAlignment="Center" MinWidth="500" MaxWidth="960">
            <TextBlock FontSize="16" FontWeight="Bold" Name="tb_header" Text="{Binding Path=Title,IsAsync=True}"></TextBlock>
            <TextBlock FontSize="14" MaxWidth="920" Name="tb_description" Text="{Binding Path=Description,IsAsync=True}"></TextBlock>
            <Image MinHeight="400" MinWidth="400" Source="{Binding Path=Poster,IsAsync=True}" />
        </StackPanel>
    </Grid>
</Page>
