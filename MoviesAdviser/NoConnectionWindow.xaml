<Window x:Class="MoviesAdviser.NoConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoviesAdviser"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="NoConnectionWindow" Height="450" Width="800"
        Loaded="Window_Loaded" WindowState="Maximized">
    <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Label FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center">Ожидание соединения</Label>
        <Image gif:ImageBehavior.AnimatedSource="Images/loading.gif" Width="100" Height="100" />
    </StackPanel>
</Window>
